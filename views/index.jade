                div.control-group
                    label.control-label(for="inputPhoneNumber") Phone Number 
                    div.controls
                        input(id="inputPhoneNumber",type="text", name="phoneNumber", placeholder="1234567890")
                div.control-group
                    label.control-label(for="inputCity") City 
                    div.controls
                        input(id="inputCity",type="text", name="city", placeholder="Plano")
        div.modal-footer.font-black
           button.btn.btn-primary(id="modal-submit2",data-dismiss="modal", aria-hidden="true") Done

    div(ng-controller='AppCtrl')
      .hero-unit.austin-skyline-background 
        h1.title-padding Tweetforce
        p Automate Your Small Business Marketing 
      div(ng-view)
    hr  
    a.pull-right(href="https://security.intuit.com/privacy/", target="_self") Privacy Policy
