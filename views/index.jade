extends layout

block body
  .container      
    div#myModal.modal.hide.fade(tabindex="-1", role="dialog", aria-labelledby="myModalLabel", aria-hidden="true")
        div.modal-header.font-black
           button.close(type="button", data-dismiss="modal", aria-hidden="true") x
           h3#myModalLabel Welcome! 
        div.modal-body.font-black
           h4 Sign Up Form 
           p Please fill in the fields to sign up for Tweetforce! 
           form(id="modal-form",method="post",action="/save-signup-info").form-horizontal
                div.control-group
                    label.control-label(for="inputBusinessName") Business Name (Required) 
                    div.controls
                        input#inputBusinessName(type="text", name="businessName", placeholder="Some Business")
                div.control-group
                    label.control-label(for="inputEmailAddress") Email Address (Required) 
                    div.controls
                        input(id="inputEmailAddress",type="email", name="emailAddress", placeholder="test@example.com", required)
                div.control-group
                    label.control-label(for="inputPhoneNumber") Phone Number 
                    div.controls
                        input(id="inputPhoneNumber",type="text", name="phoneNumber", placeholder="1234567890")
                div.control-group
                    label.control-label(for="inputCity") City 
                    div.controls
                        input(id="inputCity",type="text", name="city", placeholder="Plano")
        div.modal-footer.font-black
           button.btn.btn-primary(id="modal-submit",data-dismiss="modal", aria-hidden="true") Done

    div#myModal2.modal.hide.fade(tabindex="-1", role="dialog", aria-labelledby="myModalLabel2", aria-hidden="true")
