block body
    .container
        form(ng-submit="searchTwitter()").form-inline
            input(type="text", ng-model="searchQuery", name="text", placeholder="Twitter search term").background-gray
            input.btn.btn-primary(type="submit", value="Search") 
    .container
        pre.background-gray 
            table.table
                caption 
                    h3 Search Results
                    i(ng-show="search").icon-spinner.icon-spin.icon-4x
                tbody
                    tr(ng-repeat="status in twitterJSON.statuses")
                       td {{status.user.screen_name}} : {{status.text}}
